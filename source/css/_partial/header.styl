#stick
  text-shadow 0 0 1px #fff
  a
    border-bottom 2px solid #eee
    &:hover
      border-color #666
  @media screen and (max-width: 600px)
    background rgba(0, 153, 255, 0.9)
    z-index 100
#header
  h1
    font-size 1.6em
    font-weight bold
    margin 0.6em 0 0.2em 0
    color #333
    @media screen and (max-width: 600px)
      float left
      font-size 1em
      margin 0 1em
      height 48px
      line-height 48px
    a
      color #333
      &:hover 
        color #09f
        border-color #09f
  h2
    font-size 1em
    color #888
    text-indent 1em
    @media screen and (max-width: 600px)
      display none

  #header-nav
    font-family font-title
    color #999
    @media screen and (max-width: 600px)
      float right
    ul
      list-style none
      margin 4em 0
      @media screen and (max-width: 600px)
        margin 0
        height 48px
        line-height 48px

      li
        line-height 1.8em
        @media screen and (max-width: 600px)
          display inline-block
          width 4em
          border-left 1px solid #ccc
          height 48px
          line-height 48px
          text-align center
        a
          color #999
          padding 2px 0
          @media screen and (max-width: 600px)
            color #fff
            font-weight bold

  #ext-nav
    font-family font-title
    color #999
    a
      color #999
    ul
      list-style none
    @media screen and (max-width: 600px)
      display none
    .ext_link 
      font-size 1.5em
      i
        font-style normal
      .ext_link-twitter
        &:before
          font-family font-icon
          content  "\f099"

      .ext_link-github
        &:before
          font-family font-icon
          content  "\f092"

      .ext_link-rss
        &:before
          font-family font-icon
          content  "\f09e"