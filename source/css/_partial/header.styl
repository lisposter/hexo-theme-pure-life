#stick
  text-shadow 0 0 1px #fff
  @media screen and (max-width: 600px)
    background rgba(0, 153, 255, 0.9)
    z-index 100
#header
  h1
    font-size 2em
    font-weight bold
    margin 1em 0
    color #333
    @media screen and (max-width: 600px)
      float left
      font-size 1em
      margin 0 1em
      height 48px
      line-height 48px
    a
      color #333
      &:hover 
        color #09f
  h2
    font-size 1em
    color #888
    @media screen and (max-width: 600px)
      display none

  #header-nav
    font-family font-title
    color #999
    @media screen and (max-width: 600px)
      float right
    ul
      list-style none
      margin 4em 0
      @media screen and (max-width: 600px)
        margin 0
        height 48px
        line-height 48px

      li
        line-height 1.8em
        @media screen and (max-width: 600px)
          display inline-block
          width 5em
          border-left 1px solid #ccc
          height 48px
          line-height 48px
          text-align center
        a
          color #999
          padding 2px 0
          border-bottom 2px solid #eee
          &:hover
            border-color #666
          @media screen and (max-width: 600px)
            color #fff
            font-weight bold