#pagination
	a
		display block
		width 20%
		height 2em
		line-height 2em
		padding 5px 1em
		background color-border
		color color-meta
		font-family font-title
		font-weight bold
		text-shadow 0 0 1px #fff
		&:hover
			background color-link
			color #fff
			text-decoration none
			text-shadow none

	.prev
		&:before
			content '\f053'
			padding-right 10px
			font-family font-icon

	.next
		text-align right
		&:after
			content '\f054'
			padding-left 10px
			font-family font-icon