#widget
  background #fff
  line-height 1.8em
  padding-left 2em
  border-top 1em solid #fff //to do
  .widget
    margin-right 2em
    word-wrap break-word
    width 30%
    float left
    .title
      padding 0.8em 1em
      font-size 1em
      border-bottom 1px solid color-border
      font-weight normal

    .entry
      font-size 0.9em
      padding 1em 1.2em

    ul, ol, dl
      list-style none
      ul, ol, dl
        list-style disc
        margin-left 20px

  .tag
    small
      margin-left 15px
      color color-meta
      &:before
        content '('
      &:after
        content ')'

  .twitter
    li
      border-bottom 1px solid color-border
      padding 15px 20px
      font-size 0.9em
      &:last-of-type
        border-bottom none
    small
      display block
      margin-top 10px
      color color-meta
      line-height 1

  .tagcloud
    .entry
      padding-right 5px
    a
      margin-right 10px
      display inline-block

  .blogroll
    li
      display inline-block
      width 50%
      padding-left 1em