#widget
	background #fff
	line-height 1.8em
	padding-left 2em
	border-top 1em solid #fff //to do
	.widget
		margin-right 2em
		word-wrap break-word
		width 100%
		float left
		.title
			padding 0.8em 1em
			@media screen and (max-width: 600px)
				padding 2px 0
			font-size 1em
			border-bottom 1px solid color-border
			font-weight normal

		.entry
			font-size 0.9em
			padding 1em 1.2em

		ul, ol, dl
			list-style none
			ul, ol, dl
				list-style disc
				margin-left 20px

	.twitter
		li
			border-bottom 1px solid color-border
			padding 15px 20px
			font-size 0.9em
			&:last-of-type
				border-bottom none
		small
			display block
			margin-top 10px
			color color-meta
			line-height 1

	.blogroll
		li
			float left
			overflow hidden
			width 20%
			height 2em
			padding-left 1em
			@media screen and (max-width: 600px)
				padding-left 0
			a
				color color-font