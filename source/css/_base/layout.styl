*
	margin 0
	padding 0

body
	background main-background
	color color-font
	font-family font-default
	font-size 100%
	text-shadow 0 0 1px transparent

h1, h2, h3, h4, h5, h6
	font-family font-title

h1
	font-size 1.8em

h2
	font-size 1.5em

h3
	font-size 1.3em

a
	text-decoration none
	color color-link
	&:hover
		color #09f

.alignleft
	float left

.alignright
	float right

.clearfix
	&:after
		clear both
		content "."
		display block
		height 0
		visibility hidden


#stick
	width 16%
	height 100%
	position fixed
	left 0
	top 0
	padding 2% 2%

#wrapper
	position relative
	margin-left (20% + 1px)
	border-left 1px solid #ddd

#footer
	position absolute
	bottom 0
	left 2em

@media screen and (max-width: 600px)
	#stick
		width 100%
		height 48px
		padding 0
	#wrapper
		margin 4em auto auto auto
	#header
		height 48px